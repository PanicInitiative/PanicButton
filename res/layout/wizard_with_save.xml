<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <View
            style="@style/top_bar"
            android:layout_height="5dp"
            android:layout_width="fill_parent"/>

    <LinearLayout
            style="@style/custom_action_bar"
            android:layout_height="40dp"
            android:layout_width="fill_parent">

        <Button android:id="@+id/previous_button"
                style="@style/back_button"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:background="@drawable/topbar_button"
                android:onClick="previous"/>

        <View
                style="@style/line"
                android:layout_height="fill_parent"
                android:layout_width="1dp"/>

        <TextView
                style="@style/page_title"
                android:text="page title"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"/>

        <View
                style="@style/line"
                android:layout_height="fill_parent"
                android:layout_width="1dp"/>

        <Button android:id="@+id/next_button"
                style="@style/next_button"
                android:background="@drawable/topbar_button"
                android:text="Next"
                android:layout_height="fill_parent"
                android:layout_width="70dp"
                android:onClick="next"/>

    </LinearLayout>

    <View
            style="@style/line"
            android:layout_height="1dp"
            android:layout_width="fill_parent"/>

    <LinearLayout
            android:layout_height="30dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center">

        <ImageView android:src="@drawable/wizard_inactive"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                android:layout_margin="3dp"/>

        <ImageView android:src="@drawable/wizard_inactive"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="3dp"/>

        <ImageView android:src="@drawable/wizard_active"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="3dp"/>

        <ImageView android:src="@drawable/wizard_inactive"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="3dp"/>

        <ImageView android:src="@drawable/wizard_inactive"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="3dp"/>

        <ImageView android:src="@drawable/wizard_inactive"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="3dp"/>


    </LinearLayout>
</LinearLayout>