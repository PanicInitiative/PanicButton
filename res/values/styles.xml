<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calculator_display">
        <item name="android:textSize">80sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="calculator_btn_container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="calculator_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="custom_action_bar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="custom_action_bar_sep">
        <item name="android:background">#767272</item>
    </style>

    <style name="custom_action_bar_title">
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="top_bar">
        <item name="android:background">#d49602</item>
    </style>

    <style name="back_button">
        <item name="android:drawableLeft">@drawable/back</item>
        <item name="android:layout_weight">0</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="save_button">
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="next_button">
        <item name="android:layout_weight">0</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="line">
        <item name="android:background">#444444</item>
    </style>


    <style name="page_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="geolocation_panel">

    </style>

    <style name="text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="link">
        <item name="android:textColor">#0072bc</item>
    </style>

    <style name="message_box">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="wizard_static_panel">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="welcome_screen_text">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bulleted_text">
        <item name="android:textSize">15sp</item>
        <item name="android:drawableLeft">@drawable/wizard_active</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="wizard_page_title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>

    </style>

    <style name="wizard_sub_title">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="wizard_text">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="wizard_image">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="wizard_title_sep">
        <item name="android:background">#666666</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="wizard_panic_button">
        <item name="android:background">#ff0072bc</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="setup_wizard_image">
        <item name="android:padding">10dp</item>
    </style>

    <style name="settings_page">
        <item name="android:padding">10dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="alert_button">
        <item name="android:drawableLeft">@drawable/icon_alarm</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="settings_list">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="settings_list_item">
        <item name="android:padding">15dp</item>
    </style>

    <style name="settings_list_item_text">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="settings_list_arrow">
        <item name="android:src">@drawable/icon_arrow</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="alert_status">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="contact_number">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="contact_select_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="activate_disguise_button">
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="i_am_at_text">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">#ebebeb</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

</resources>