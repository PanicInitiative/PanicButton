<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calculator_display">
        <item name="android:textSize">60sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="calculator_btn_container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="calculator_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="custom_action_bar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#222222</item>
    </style>

    <style name="top_bar">
        <item name="android:background">#d49602</item>
    </style>

    <style name="back_button">
        <item name="android:drawableLeft">@drawable/back</item>
        <item name="android:layout_weight">0</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="save_button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:drawableLeft">@drawable/save</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="next_button">
        <item name="android:layout_weight">0</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="line">
        <item name="android:background">#444444</item>
    </style>


    <style name="page_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="geolocation_panel">

    </style>

    <style name="text">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="link">
        <item name="android:textColor">#78c7fe</item>
    </style>

    <style name="char_count">
        <item name="android:gravity">right</item>
    </style>

    <style name="message_box">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>